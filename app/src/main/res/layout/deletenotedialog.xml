<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/deletenotedialog"
    android:background="@drawable/alert_back"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp">
    
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/deleteimg"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:text="Delete Note"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/deleteimg"
        app:layout_constraintStart_toEndOf="@id/deleteimg"
        app:layout_constraintTop_toTopOf="@id/deleteimg"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deletenotemsg"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:text="Are you sure you want to delete this note ?"
        android:textSize="@dimen/_13ssp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/deleteimg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletenote"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:padding="@dimen/_8sdp"
        android:text="Delete Note"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deletenotemsg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:padding="@dimen/_8sdp"
        android:text="Cancel"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:textSize="@dimen/_13ssp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deletenote"
        app:layout_constraintTop_toBottomOf="@id/deletenotemsg"/>

</androidx.constraintlayout.widget.ConstraintLayout>